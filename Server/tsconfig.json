
{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "baseUrl": ".",
      "strict": true,
      "esModuleInterop": true,
      "paths": {
        "@/*": [
          "src/*"
        ],
      },
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "skipLibCheck": false,
      "pretty": true,
      "noEmit": false,
      "noErrorTruncation": true,
      "allowSyntheticDefaultImports": true
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types/**/*.d.ts"
    ],
    "include": [
      "src/**/*",
      "./types/**/*.d.ts",
      "types",
    ]
  }